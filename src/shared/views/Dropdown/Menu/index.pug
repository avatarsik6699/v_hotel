-
  const mockList = [
    {text: "Спальни", defaultValue: 0},
    {text: "кровати", defaultValue: 0},
    {text: "ванные комнаты", defaultValue: 0},
  ]
  
  const props = {itemList: mockList}

mixin Menu({itemList} = props)
  section.dropdown__menu
    ul.dropdown__menu-list
      each item in itemList
        li.dropdown__menu-item
          span.dropdown__menu-category= item.text
          .dropdown__menu-panel 
            button.btn.dropdown__menu-sub -
            span.dropdown__menu-count= item.defaultValue 
            button.btn.dropdown__menu-add +
